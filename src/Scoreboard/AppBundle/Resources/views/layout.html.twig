{% extends 'ScoreboardAppBundle::base.html.twig' %}

{% block base %}
	<!-- Fixed navbar -->
	<div class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="{{ path('stream') }}">Scoreboard</a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li {{ isActiveMenuItem('stream') }}><a href="{{ path('stream') }}"><span class="glyphicon glyphicon-list"></span> Stream</a></li>
					<li {{ isActiveMenuItem('settings') }}><a href="#about">Settings</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li>
		            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
		                <a>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |</a></li><li>
		                <a href="{{ path('fos_user_security_logout') }}">
		                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
		                </a>
		            {% else %}
		                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
		            {% endif %}
					</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="container content-container">

	{% include 'ScoreboardAppBundle::notices.html.twig' %}

	{% block content %}{% endblock %}
	
	</div>
{% endblock %}
