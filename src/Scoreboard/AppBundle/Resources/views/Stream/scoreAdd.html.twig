{% extends 'ScoreboardAppBundle::layout.iframe.html.twig' %}

{% block content %}
<div class="container">
<h2>Give <span id="points-label">1</span> points</h2>
<form role="form" method="POST" action="{{ path('stream_score_add') }}">

	<div class="form-group">
		<label for="points">Points</label>
		<input type="hidden" id="points" value="1" name="points" />
		<div id="points-slider"></div>
	</div>

	<div class="form-group">
		<label for="user">User</label>
		<input type="text" class="form-control" name="user" id="user" data-href="{{ path('user_autocomplete') }}" placeholder="Enter username">
	</div>
	<button type="submit" class="btn btn-default">Submit</button>
</form>
</div>
{% endblock %}


{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('bundles/scoreboardapp/js/stream.js') }}"></script>
{% endblock %}